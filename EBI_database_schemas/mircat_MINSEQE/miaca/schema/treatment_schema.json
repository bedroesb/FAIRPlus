{
  "id": "https://w3id.org/mircat/miaca/schema/treatment_schema.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "MIACA treatment schema",
  "description": "Description of the conditions that are applied to CellLine during culturing of cells. ‘Treatment* also covers the perturbation. More than one perturbator can be applied in the same ‘Treatment’. ",
  "type": "object",
  "definitions" : {
    "volume" : { "description": "" , "type" : "string" },
    "volumeUnit" : { "description": "e.g. mL" , "type" : "string", "enum": [ "pL", "nL", "uL","ml" ] },
    "concentration" : { "description": "" , "type" : "string" },
    "concentrationUnit" : { "description": "e.g. mol/L" , "type" : "string" , "enum": [  "pmol/L","nmol/L", "umol/L","mmol/L" ]}
  },
  "properties": {
    "@context": {
      "description": "The JSON-LD context",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "@id": {
      "description": "The JSON-LD identifier",
      "type": "string",
      "format": "uri"
    },
    "@type": {
      "description": "The JSON-LD type",
      "type": "string",
      "format": "uri"
    },
    "ID": {
      "description": "a UUID for the instance of treatment process",
      "type": "string"
    },
    "conditionName": {
      "description" : "a reference to an instrument used during the data acquisition",
      "type" : "string"
    },
    "array": {
      "description" : "description of array type and vessel",
      "type" : "string",
      "@type": { "type": "string", "enum": [ "ArraySupportType" ]}
    },
    "reagentName": {
      "description": "the name and characteristics of the chemical used as reagent",
      "type": "object",
      "properties": {
        "name": {
          "description": "the name of the reagent",
          "type": "string"
        },
        "characteristics": {
          "anyOf": [
            { "$ref": "#/definitions/volume" },
            { "$ref": "#/definitions/volumeUnit" },
            { "$ref": "#/definitions/concentration" },
            { "$ref": "#/definitions/concentrationUnit" }
          ]
        }        
      }
    },
    "compReagentName": {
      "description": "the name and characteristics of the chemical used as reagent",
      "type": "object",
      "properties": {
        "name": {
          "description": "the name of the reagent",
          "type": "string"
        },
        "characteristics": {
          "anyOf": [
            { "$ref": "#/definitions/volume" },
            { "$ref": "#/definitions/volumeUnit" },
            { "$ref": "#/definitions/concentration" },
            { "$ref": "#/definitions/concentrationUnit" }
          ]
        }
      }
    },
    "cellLine": {
      "description": "",
      "type": "string"
    },
    "passageNo": {
      "description": "",
      "type": "string"
    },
    "seedingDensity": {
      "description": "",
      "type": "string"
    },
    "cellDensity": {
      "description": "",
      "type": "string"
    },
    "temperature": {
      "description": "",
      "type": "string"
    },
    "temperatureUnit": {
      "description": "",
      "type": "string"
    },
    "co2Content": {
      "description": "",
      "type": "string"
    },
    "co2ContentUnit": {
      "description": "",
      "type": "string"
    },
    "humidity": {
      "description": "",
      "type": "string"
    },
    "humidityUnit": {
      "description": "e.g. %",
      "type": "string"
    },
    "duration": {
      "description": "e.g. %",
      "type": "string"
    },
    "durationUnit": {
      "description": "e.g. %",
      "type": "string"
    },
    "comment": {
      "description": "an attribute to report observations" ,
      "type" : "string"
    }
  }
}
